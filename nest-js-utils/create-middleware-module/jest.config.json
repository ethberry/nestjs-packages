{
  "collectCoverage": true,
  "collectCoverageFrom": ["src/**/*.{js,jsx,ts,tsx}"],
  "coverageDirectory": "../coverage",
  "moduleFileExtensions": ["js", "jsx", "ts", "tsx", "json"],
  "rootDir": "src",
  "testEnvironment": "node",
  "testRegex": ".test.tsx?$",
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "verbose": true
}
